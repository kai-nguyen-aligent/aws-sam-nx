{
  "$schema": "https://json-schema.org/schema",
  "$id": "Service",
  "title": "",
  "type": "object",
  "properties": {
    "brand": {
      "type": "string",
      "description": "Brand name (is configured in {workspaceRoot}/nx.json)"
    },
    "name": {
      "type": "string",
      "description": "Service name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What would you like to call the service?",
      "pattern": "^[a-zA-Z-]+$",
      "minLength": 3
    },
    "type": {
      "type": "string",
      "description": "Service type",
      "default": "general",
      "$default": {
          "$source": "argv",
          "index": 1
      }
    }
  },
  "required": ["brand", "name"]
}
